<%- include("partials/header.ejs")%>
<section>
    <div class="container-fluid " id="inp-contai">
        <div class="display-2 text-center text-white animate__animated animate__fadeInUp" id="text-search">Search a
            videogame</div>
        <form action="/search" class="text-center" method="GET">
            <input type="text" id="" name="game" placeholder="Grand theft Auto" class="form-control mt-2 " id="gameInp"
                required>
            <button class="btn btn-lg btn-danger text-white hvr-bounce-in  mt-2"><i class="fas fa-search"></i>
                Buscar</button>
        </form>
    </div>
</section>
<div class="upcoming">
    <div class="display-3 text-center text-white animate__animated animate__backInLeft">Upcoming Games</div>
</div>
<section class="ml-0 mr-0 pr-0 pl-0 mt-4">
    <div class="container-fluid ">
        <div class="row">
            <% gamesData.results.forEach(function(comingGames){ %>
            <div class="col-lg-4 mb-2 d-flex align-items-stretch">
                <div class="card color-card pt-0 mt-0 mb-0 pb-0" style="width: 100%; height:100%;">
                    <a href="/game/<%=comingGames.id%> "><img src="<%=comingGames.background_image%>"
                            class="card-img-top " alt="..."></a>
                    <h2 class="pt-0 mb-0 text-center card-color-title text-white"><%=comingGames.name%> </h2>
                    <h3 class="text-center bg-warning text-white px-0 mx-0 pt-0 mt-0 pb-o mb-0">Release Date:
                        <%= comingGames.released %></h3>
                    <a class="btn btn-dark pt-1 mt-0 px-0 mr-0 ml-0" data-toggle="collapse"
                        href="#collapse-platf<%=gamesData.results.indexOf(comingGames).toString()%>" role="button"
                        aria-expanded="false"
                        aria-controls="collapse-platf<%=gamesData.results.indexOf(comingGames).toString()%>">
                        PLATFORMS
                    </a>
                    <div class="collapse" id="collapse-platf<%=gamesData.results.indexOf(comingGames).toString()%>">
                        <div class="text-center">
                            <% comingGames.platforms.forEach(function(platforms){ %>
                            <%if(platforms.platform.name =="PlayStation 4"){%>
                            <div class="d-inline"><i class="fab fa-playstation fa-2x mt-2 mx-2 p-2"></i>
                            </div>
                            <%}%>
                                <%if(platforms.platform.name =="Xbox One"){%>
                            <div class="d-inline"><i class="fab fa-xbox fa-2x mt-2 mx-2 p-2"></i>
                            </div>
                            <%}%>
                                <%if(platforms.platform.name =="Nintendo Switch"){%>
                            <div class="d-inline"><i class="fas fa-gamepad fa-2x mt-2 mx-2 p-2"></i>
                            </div>
                            <%}%>
                                <%if(platforms.platform.name =="PC"){%>
                            <div class="d-inline"><i class="fas fa-laptop fa-2x mt-2 mx-2 p-2"></i></div>
                            <%}%>
                                <%}) %>
                        </div>
                    </div>
                    <div class="mt-2 pt-0 pb-0 mb-0 text-center">
                        <a href="/game/<%=comingGames.id%>" class="btn last-color mt-2 mb-2 ">See More</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

</section>
<%- include("partials/footer.ejs")%>